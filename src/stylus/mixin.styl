no-wrap()
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

title-style()
  border-left: 2px solid red
  margin: 10px 5px 15px
  padding: 2px 12px
  font-size: 22px
  color: rgba(0, 0, 0, .7)

booklist-item()
  padding: 5px
  margin-bottom: 15px
  background-color: #fff
img-error()
  &.error:before
    content: "加载失败了哟"
    display:inline-block
    width: 80%
    margin-left: 10%
    margin-top: 50%
    text-align: center
    color: lightgray
    font-size: 14px
  &.error
    border: 1px solid lightgray
slide-right()
  .slide-right-enter-active,
  .slide-right-leave-active
    transition: transform .3s
  .slide-right-enter,
  .slide-right-leave-to
    transform: translateX(-100%)
slide-down()
  .slide-down-enter-active,
  .slide-down-leave-active
    transition: transform .3s
  .slide-down-enter,
  .slide-down-leave-to
    transform: translateY(-100%)
slide-up()
  .slide-up-enter-active,
  .slide-up-leave-active
    transition: transform .3s
  .slide-up-enter,
  .slide-up-leave-to
    transform: translateY(100%)

